generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./todos.db"
}

model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  priority    String   @default("medium")
  dueDate     DateTime?
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}