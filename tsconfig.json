{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["./*"],
      "@src/*": ["src/*"],
      "@main/*": ["src/main/electron/*"],
      "@server/*": ["src/main/server/*"],
      "@renderer/*": ["src/renderer/*"]
    },
    "jsx": "react-jsx",
  },
  "include": [
    "src/**/*",
    "webpack"
  ]
}
